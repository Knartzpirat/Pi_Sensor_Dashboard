generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationen
  refreshTokens   RefreshToken[]
  recoveryCodes   RecoveryCode[]
  preferences     UserPreferences?

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  // "Angemeldet bleiben" Flag
  persistent Boolean  @default(false)
  
  // Security
  ipAddress String?
  userAgent String?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model RecoveryCode {
  id        String    @id @default(cuid())
  code      String    // Gehasht gespeichert (bcrypt)
  used      Boolean   @default(false)
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  
  // Beziehung zum User
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([used])
  @@map("recovery_codes")
}


model SetupStatus {
  id          String   @id @default(cuid())
  isCompleted Boolean  @default(false)
  completedAt DateTime?
  version     String?

  @@map("setup_status")
}

model UserPreferences {
  id           String   @id @default(cuid())
  dateFormat   String   @default("DD.MM.YYYY") // e.g., "DD.MM.YYYY", "MM/DD/YYYY", "YYYY-MM-DD"
  timezone     String   @default("Europe/Berlin") // IANA timezone identifier
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

// Label-Tabelle (wiederverwendbare Tags/Kategorien)
// Label-Tabelle mit Type für verschiedene Kategorien
model Label {
  id        String       @id @default(cuid())
  name      String
  color     String?      // z.B. "#FF5733"
  type      EntityType
  createdAt DateTime     @default(now())

  testObjects TestObject[] @relation("TestObjectLabels")

  @@unique([name, type])  // ← Name muss nur pro Typ unique sein
  @@index([type])
}

// Enum für Label-Typen
enum EntityType {
  TEST_OBJECT
  SENSOR
  USER_PROFILE
  MEASUREMENT
  // ... weitere Typen später
}

// Testobjekt-Tabelle
model TestObject {
  id           String        @id @default(cuid())
  title        String
  description  String?       @db.Text
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Many-to-Many relation with Labels
  labels       Label[]       @relation("TestObjectLabels")

  // Relationen
  measurementSensors MeasurementSensor[] // Sensoren können verschiedene TestObjects pro Messung untersuchen

  @@index([createdAt])
}

// Bilder-Tabelle mit Reihenfolge
model Picture {
  id            String     @id @default(cuid())
  filename      String
  originalName  String
  mimeType      String
  size          Int
  url           String
  order         Int        @default(0)
  
  // Polymorphe Beziehung
  entityType    EntityType           // ← Zu welcher Entität gehört das Bild?
  entityId      String               // ← ID der Entität
  
  createdAt     DateTime   @default(now())
  
  @@index([entityType, entityId, order])
  @@index([entityType, entityId])
}

// PDF/Dokument-Tabelle mit Reihenfolge
model Document {
  id            String     @id @default(cuid())
  filename      String
  originalName  String
  mimeType      String     // z.B. "application/pdf"
  size          Int
  url           String
  order         Int        @default(0)

  // Polymorphe Beziehung
  entityType    EntityType           // ← Zu welcher Entität gehört das Dokument?
  entityId      String               // ← ID der Entität

  createdAt     DateTime   @default(now())

  @@index([entityType, entityId, order])
  @@index([entityType, entityId])
}

// Sensor-Tabelle
model Sensor {
  id               String              @id @default(cuid())
  name             String              @unique
  driver           String              // z.B. "DHT22Driver", "BMP280Driver"
  connectionType   SensorConnectionType // i2c, adc (nur Custom Board), io

  // Board-Zuordnung (GPIO oder CUSTOM)
  boardType        String              @default("GPIO") // Zu welchem Board gehört dieser Sensor

  // GPIO Board: Speichert das verwendete BCM Pin (nur für io-Sensoren)
  // Custom Board: Speichert die Kanal-Nummer (1-8)
  pin              Int?                // GPIO Pin (BCM) oder Kanal-Nummer

  // Zusätzliche Verbindungsparameter (z.B. I2C-Adresse für i2c-Sensoren)
  connectionParams Json?               // Verbindungsparameter als JSON

  pollInterval     Float               @default(1.0) // Polling-Intervall in Sekunden
  enabled          Boolean             @default(true)
  calibration      Json?               // Kalibrierungsdaten

  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt

  // Relationen
  entities         SensorEntity[]
  measurementSensors MeasurementSensor[]

  @@index([enabled])
  @@index([boardType])
  @@map("sensors")
}

// Enum für Sensor-Verbindungstypen
enum SensorConnectionType {
  i2c  // I2C-Bus (beide Boards)
  adc  // Analog über ADC (nur Custom Board)
  io   // Digital GPIO (beide Boards)
}

// Sensor-Entität (z.B. Temperatur, Luftfeuchtigkeit eines Sensors)
model SensorEntity {
  id          String   @id @default(cuid())
  sensorId    String
  name        String   // z.B. "Temperature", "Humidity"
  unit        String   // z.B. "°C", "%", "hPa"
  type        String   // z.B. "temperature", "humidity", "pressure"
  minValue    Float?   // Minimaler erwarteter Wert
  maxValue    Float?   // Maximaler erwarteter Wert
  precision   Int      @default(2) // Dezimalstellen
  color       String   @default("#3b82f6") // Farbe für Graph-Darstellung
  isVisible   Boolean  @default(true) // Im Graph sichtbar

  createdAt   DateTime @default(now())

  // Relationen
  sensor      Sensor         @relation(fields: [sensorId], references: [id], onDelete: Cascade)
  readings    SensorReading[]

  @@index([sensorId])
  @@index([isVisible])
  @@map("sensor_entities")
}

// Messungs-Session
model Measurement {
  id              String            @id @default(cuid())
  sessionId       String            @unique // Eindeutige Session-ID vom Backend
  title           String
  description     String?           @db.Text

  status          MeasurementStatus @default(RUNNING)
  interval        Float             @default(1.0) // Messintervall in Sekunden
  duration        Float?            // Optional: Dauer in Sekunden

  startTime       DateTime
  endTime         DateTime?

  readingsCount   Int               @default(0)
  errorCount      Int               @default(0)

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  // Relationen
  measurementSensors MeasurementSensor[] // Sensoren mit ihren TestObject-Zuordnungen
  readings        SensorReading[]

  @@index([sessionId])
  @@index([status])
  @@index([startTime])
  @@map("measurements")
}

// Zwischentabelle für Sensor-TestObject-Zuordnung pro Messung
model MeasurementSensor {
  id              String      @id @default(cuid())
  measurementId   String
  sensorId        String
  testObjectId    String?     // Optional: Welches TestObject untersucht dieser Sensor

  createdAt       DateTime    @default(now())

  // Relationen
  measurement     Measurement @relation(fields: [measurementId], references: [id], onDelete: Cascade)
  sensor          Sensor      @relation(fields: [sensorId], references: [id], onDelete: Cascade)
  testObject      TestObject? @relation(fields: [testObjectId], references: [id], onDelete: SetNull)

  @@unique([measurementId, sensorId]) // Ein Sensor kann nur einmal pro Messung vorkommen
  @@index([measurementId])
  @@index([sensorId])
  @@index([testObjectId])
  @@map("measurement_sensors")
}

// Enum für Messungs-Status
enum MeasurementStatus {
  IDLE
  STARTING
  RUNNING
  PAUSED
  STOPPING
  COMPLETED
  ERROR
}

// Sensor-Messwert (wird vom Frontend während des WebSocket-Streams gespeichert oder kontinuierlich im Hintergrund)
model SensorReading {
  id            String   @id @default(cuid())
  measurementId String?  // Optional: null für kontinuierliche Hintergrund-Erfassung
  entityId      String

  value         Float
  quality       Float    @default(1.0) // Qualität 0-1
  timestamp     DateTime @default(now())

  // Relationen
  measurement   Measurement?  @relation(fields: [measurementId], references: [id], onDelete: Cascade)
  entity        SensorEntity @relation(fields: [entityId], references: [id], onDelete: Cascade)

  @@index([measurementId, timestamp])
  @@index([entityId, timestamp]) // For efficient time-range queries
  @@index([timestamp]) // For cleanup queries
  @@map("sensor_readings")
}

// Hardware-Konfiguration
model HardwareConfig {
  id                      String   @id @default(cuid())
  boardType               String   @default("GPIO") // "GPIO" oder "CUSTOM"
  dashboardUpdateInterval Int      @default(5000)   // Dashboard update interval in ms (default: 5 seconds)
  graphDataRetentionTime  Int      @default(3600000) // Graph data retention in ms (default: 1 hour)

  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@map("hardware_config")
}
